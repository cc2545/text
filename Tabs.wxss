/* components/Tabs/Tabs.wxss */
.tabs {
  left: 0px;
}
.tabs_title {
  margin-left: 30rpx;
  margin-right: 30rpx;
  top: 0px;
  height: 90rpx;
  opacity: 1;
  border-radius: 10px;
  background: #ffffff;
  box-shadow: 0px 1px 7px 3px #d5e3e3;
  display: flex;
  padding: 15rpx 0;
}
.title_item {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  left: 2px;
  width: 176px;
  height: 80rpx;
  opacity: 1;
  border-radius: 15rpx;
  font-size: larger;
  color: #57b6e6;
}
.active {
  margin-top: -14rpx;
  border-radius: 15rpx;
  opacity: 1;
  height: 115rpx;
  width: 550rpx;
  color: #fff;
  background: linear-gradient(223.13deg, #57b6e6 0%, rgba(141, 242, 234, 0.5) 90.99%, rgba(247, 247, 193, 0.01) 100%);
}
.tabs_content {
  margin-left: 30rpx;
  margin-right: 30rpx;
  top: 0px;
  height: 260rpx;
  opacity: 1;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  background: #ffffff;
  box-shadow: 0px 1px 7px 3px #d5e3e3;
  display: flex;
  padding: 15rpx 0;
}
